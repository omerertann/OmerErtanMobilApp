<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmerErtanMobilApp.LoginPage"
             Title="Giriş Yap">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Giriş Yap" FontSize="24" HorizontalOptions="Center"/>
        <Entry x:Name="emailEntry" Placeholder="E-posta" Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Şifre" IsPassword="True"/>
        <Button Text="Giriş Yap" Clicked="OnLoginClicked"/>
        <Label x:Name="errorLabel" TextColor="Red" IsVisible="False"/>
        <Button Text="Kayıt Ol" Clicked="GoToRegister"/>
    </VerticalStackLayout>
</ContentPage>
