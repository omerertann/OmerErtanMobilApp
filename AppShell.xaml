<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OmerErtanMobilApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OmerErtanMobilApp"
    xmlns:views="clr-namespace:OmerErtanMobilApp.Views">

    <FlyoutItem Title="Ana Sayfa" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Döviz Kurları" Icon="currency.png">
        <ShellContent ContentTemplate="{DataTemplate local:KurlarPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Haberler" Icon="news.png">
        <ShellContent ContentTemplate="{DataTemplate local:HaberlerPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Hava Durumu" Icon="weather.png">
        <ShellContent ContentTemplate="{DataTemplate local:HavaPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Yapılacaklar" Icon="checklist.png">
        <ShellContent ContentTemplate="{DataTemplate views:TodoPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Ayarlar" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate local:AyarlarPage}" />
    </FlyoutItem>

</Shell>
